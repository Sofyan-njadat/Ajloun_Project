    <style>
        :root {
            --primary: #355E3B;
            --secondary: #F2E8CF;
            --accent: #C7AD8F;
            --gold: #FFE15D;
            --text-dark: #1B1B2F;
            --light: #F9F5F0;
        }

        @@font -face {
            font-family: 'Tajawal-Bold';
            src: url('https://fonts.googleapis.com/css2?family=Tajawal:wght@700&display=swap');
        }

        .org-galaxy {
            direction: rtl;
            font-family: 'Tajawal-Bold', 'Segoe UI', sans-serif;
            perspective: 2000px;
            margin: 5rem auto;
            max-width: 1200px;
            position: relative;
        }

        .org-tree {
            position: relative;
            padding-top: 100px;
            transform-style: preserve-3d;
            filter: drop-shadow(0 0 10px rgba(53,94,59,0.2));
        }

        .directorate {
            background: linear-gradient(145deg, var(--primary), #1e3a23);
            color: var(--gold);
            width: 320px;
            margin: 0 auto;
            padding: 25px;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            position: relative;
            z-index: 100;
            transform: translateY(0) rotateX(0);
            animation: float 6s ease-in-out infinite, glow 3s alternate infinite;
            text-align: center;
            font-size: 1.8rem;
            border: 3px solid var(--gold);
            text-shadow: 0 2px 4px rgba(0,0,0,0.3);
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
        }

            .directorate:hover {
                transform: translateY(-15px) scale(1.05) rotateX(5deg);
                box-shadow: 0 25px 50px rgba(0,0,0,0.4);
                animation: float 6s ease-in-out infinite, superGlow 1.5s alternate infinite;
            }

            .directorate::after {
                content: '';
                position: absolute;
                bottom: -25px;
                left: 50%;
                transform: translateX(-50%);
                width: 4px;
                height: 25px;
                background: linear-gradient(to bottom, var(--gold), var(--accent));
                z-index: 10;
            }

            .directorate::before {
                content: '';
                position: absolute;
                top: -10px;
                left: 0;
                right: 0;
                height: 10px;
                background: linear-gradient(180deg, rgba(255,225,93,0.3), transparent);
                border-radius: 50% 50% 0 0;
            }

        .branches-container {
            display: flex;
            justify-content: center;
            margin-top: 60px;
            position: relative;
        }

            .branches-container::before {
                content: '';
                position: absolute;
                top: -30px;
                left: 50%;
                transform: translateX(-50%);
                width: 80%;
                height: 2px;
                background: linear-gradient(90deg, transparent, var(--gold), transparent);
                opacity: 0.7;
            }

        .branches {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 40px;
            position: relative;
            padding-top: 30px;
        }

        .branch {
            position: relative;
            flex: 1;
            min-width: 220px;
            max-width: 240px;
            transition: all 0.6s ease;
        }

            .branch:hover {
                transform: translateY(-10px);
            }

            .branch:nth-child(odd):hover {
                transform: translateY(-10px) rotateZ(2deg);
            }

            .branch:nth-child(even):hover {
                transform: translateY(-10px) rotateZ(-2deg);
            }

        .department {
            background: linear-gradient(145deg, var(--light), var(--secondary));
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
            position: relative;
            z-index: 2;
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            transform: scale(0.95);
            opacity: 0;
            animation: departmentAppear 0.8s forwards;
            border-right: 5px solid var(--accent);
            text-align: center;
            line-height: 1.6;
            font-size: 1.2rem;
            color: var(--text-dark);
            cursor: pointer;
            overflow: hidden;
        }

            .department::before {
                content: '';
                position: absolute;
                top: -30px;
                left: 50%;
                width: 3px;
                height: 30px;
                background: linear-gradient(to bottom, var(--gold), var(--accent));
                z-index: 1;
            }

            .department::after {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 3px;
                background: linear-gradient(90deg, var(--gold), var(--accent), var(--gold));
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .department:hover {
                transform: translateY(-15px) scale(1.05);
                box-shadow: 0 20px 40px rgba(0,0,0,0.25);
                background: linear-gradient(145deg, #fff, var(--secondary));
                color: var(--primary);
            }

                .department:hover::after {
                    opacity: 1;
                }

        .connector {
            position: absolute;
            top: -40px;
            left: 50%;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--accent), transparent);
            transform: translateX(-50%);
            z-index: 0;
        }

        /* Animations */
        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0) rotateX(0);
        }

        50% {
            transform: translateY(-20px) rotateX(5deg);
        }

        }

        @@keyframes glow {
            from

        {
            box-shadow: 0 0 15px rgba(53,94,59,0.5);
        }

        to {
            box-shadow: 0 0 30px rgba(255,225,93,0.5);
        }

        }

        @@keyframes superGlow {
            0%

        {
            box-shadow: 0 0 15px rgba(255,225,93,0.5);
        }

        50% {
            box-shadow: 0 0 40px rgba(255,225,93,0.8);
        }

        100% {
            box-shadow: 0 0 15px rgba(255,225,93,0.5);
        }

        }

        @@keyframes departmentAppear {
            to

        {
            opacity: 1;
            transform: scale(1);
        }

        }

        /* Animation delays */
        .branch:nth-child(1) .department {
            animation-delay: 0.2s;
        }

        .branch:nth-child(2) .department {
            animation-delay: 0.4s;
        }

        .branch:nth-child(3) .department {
            animation-delay: 0.6s;
        }

        .branch:nth-child(4) .department {
            animation-delay: 0.8s;
        }

        /* Responsive design */
        @@media (max-width: 992px) {
            .branches

        {
            gap: 30px;
        }

        .branch {
            min-width: 180px;
        }

        }

        @@media (max-width: 768px) {
            .org-galaxy

        {
            margin: 3rem auto;
        }

        .branches {
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .branch {
            min-width: 80%;
            max-width: 300px;
        }

        .department::before,
        .connector,
        .branches-container::before {
            display: none;
        }

        .directorate {
            width: 280px;
            font-size: 1.5rem;
        }

        }

        /* 3D tilt effect */
        .org-galaxy:hover .org-tree {
            animation: gentleTilt 10s infinite alternate;
        }

        @@keyframes gentleTilt {
            0%, 100%

        {
            transform: rotateY(0deg) rotateX(0deg);
        }

        25% {
            transform: rotateY(2deg) rotateX(1deg);
        }

        50% {
            transform: rotateY(-1deg) rotateX(2deg);
        }

        75% {
            transform: rotateY(1deg) rotateX(-1deg);
        }

        }
    </style>
</head>
