        font-weight: 600;
        text-transform: none;
        box-shadow: 0 4px 15px rgba(var(--primary-color-rgb), 0.2);
    }

    .send-email-btn:hover {
        background: var(--primary-color-dark);
        transform: translateY(-2px);
