@model dynamic

@{
    ViewData["Title"] = "Statistics";
}


<!-- إضافة المكتبات المطلوبة -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .stat-card {
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        font-size: 2.5rem;
        opacity: 0.8;
    }

    .stat-value {
        font-size: 2rem;
        font-weight: bold;
    }

    .stat-label {
        font-size: 1.1rem;
        color: #6c757d;
    }

    .chart-container {
        position: relative;
        height: 300px;
        margin-bottom: 1rem;
    }

    .recent-news-item {
        padding: 1rem;
        border-bottom: 1px solid #eee;
        transition: background-color 0.3s ease;
    }

        .recent-news-item:hover {
            background-color: #f8f9fa;
        }

    .news-date {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .dashboard-header {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
    }

    .trend-indicator {
        font-size: 0.9rem;
        padding: 0.25rem 0.5rem;
        border-radius: 20px;
    }

    .trend-up {
        background-color: rgba(40, 167, 69, 0.1);
        color: #28a745;
    }

    .trend-down {
        background-color: rgba(220, 53, 69, 0.1);
        color: #dc3545;
    }
</style>

<div class="container-fluid">
    <!-- رأس لوحة التحكم -->
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-3">لوحة التحكم</h1>
                <p class="mb-0">مديرية ثقافة عجلون</p>
            </div>
            <div class="col-md-4 text-end">
                <div class="d-inline-block p-3 bg-white bg-opacity-10 rounded">
                    <i class="fas fa-calendar-alt me-2"></i>
                    <span id="current-date"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- البطاقات الإحصائية -->
    <div class="row g-4 mb-4">
        <!-- إجمالي المهرجانات -->
        <div class="col-md-3">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="stat-label">إجمالي المهرجانات</h6>
                            <h2 class="stat-value">@Model.TotalFestivals</h2>
                            <span class="trend-indicator trend-up">
                                <i class="fas fa-calendar-alt"></i> مهرجان
                            </span>
                        </div>
                        <div class="stat-icon text-primary">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- الكتب المتاحة -->
        <div class="col-md-3">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="stat-label">الكتب المتاحة</h6>
                            <h2 class="stat-value">@Model.LibraryStats.AvailableBooks</h2>
                            <span class="trend-indicator trend-up">
                                <i class="fas fa-book"></i> كتاب متاح
                            </span>
                        </div>
                        <div class="stat-icon text-success">
                            <i class="fas fa-book"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- إجمالي الأخبار -->
        <div class="col-md-3">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="stat-label">إجمالي الأخبار</h6>
                            <h2 class="stat-value">@Model.TotalNews</h2>
                            <span class="trend-indicator trend-up">
                                <i class="fas fa-newspaper"></i> خبر
                            </span>
                        </div>
                        <div class="stat-icon text-warning">
                            <i class="fas fa-newspaper"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- إجمالي الكتب -->
        <div class="col-md-3">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="stat-label">إجمالي الكتب</h6>
                            <h2 class="stat-value">@Model.LibraryStats.TotalBooks</h2>
                            <span class="trend-indicator trend-up">
                                <i class="fas fa-book"></i> كتاب
                            </span>
                        </div>
                        <div class="stat-icon text-info">
                            <i class="fas fa-book"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- إضافة قسم إحصائيات المكتبة بعد قسم المهرجانات -->
    <div class="row g-4 mb-4">

        <div class="col-md-4">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="stat-label">الكتب المتاحة</h6>
                            <h2 class="stat-value">@Model.LibraryStats.AvailableBooks</h2>
                            <span class="trend-indicator trend-up">
                                <i class="fas fa-check"></i> متاح
                            </span>
                        </div>
                        <div class="stat-icon text-success">
                            <i class="fas fa-book-open"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="stat-label">الكتب المستعارة</h6>
                            <h2 class="stat-value">@Model.LibraryStats.BorrowedBooks</h2>
                            <span class="trend-indicator trend-up">
                                <i class="fas fa-book-reader"></i> مستعار
                            </span>
                        </div>
                        <div class="stat-icon text-warning">
                            <i class="fas fa-book-reader"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- المخططات البيانية -->
    <div class="row g-4 mb-4">
        <!-- مخطط دائري للمهرجانات -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">توزيع المهرجانات</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="festivalsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- مخطط دائري للكتب -->
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">توزيع الكتب</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <canvas id="booksChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- مخطط متحرك -->
    <div class="row g-4 mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">تطور المهرجانات والكتب خلال الأسبوع</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="height: 400px;">
                        <canvas id="trendChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- آخر الأخبار -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">آخر الأخبار</h5>
                </div>
                <div class="card-body p-0">
                    @foreach (var news in Model.RecentNews)
                    {
                        <div class="recent-news-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">@news.Title</h6>
                                    <span class="news-date">
                                        <i class="far fa-clock me-1"></i>
                                        @news.PublishDate.ToString("yyyy-MM-dd")
                                    </span>
                                </div>
                                <a href="#" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // عرض التاريخ الحالي
        document.getElementById('current-date').textContent = new Date().toLocaleDateString('ar-SA', {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });

        // مخطط دائري للمهرجانات
        const festivalsCtx = document.getElementById('festivalsChart').getContext('2d');
        new Chart(festivalsCtx, {
            type: 'doughnut',
            data: {
                labels: ['المهرجانات', 'الكتب المتاحة', 'الكتب المستعارة'],
                datasets: [{
                    data: [
        @Model.TotalFestivals,
        @Model.LibraryStats.AvailableBooks,
        @Model.LibraryStats.BorrowedBooks
                    ],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(23, 162, 184, 0.8)',
                        'rgba(255, 193, 7, 0.8)'
                    ],
                    borderColor: [
                        'rgba(40, 167, 69, 1)',
                        'rgba(23, 162, 184, 1)',
                        'rgba(255, 193, 7, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                size: 14
                            },
                            padding: 20
                        }
                    }
                }
            }
        });

        // مخطط دائري للكتب
        const booksCtx = document.getElementById('booksChart').getContext('2d');
        new Chart(booksCtx, {
            type: 'doughnut',
            data: {
                labels: ['الكتب المتاحة', 'الكتب المستعارة'],
                datasets: [{
                    data: [
        @Model.LibraryStats.AvailableBooks,
        @Model.LibraryStats.BorrowedBooks
                    ],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)'
                    ],
                    borderColor: [
                        'rgba(40, 167, 69, 1)',
                        'rgba(255, 193, 7, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            font: {
                                size: 14
                            },
                            padding: 20
                        }
                    }
                }
            }
        });

        // مخطط متحرك
        const trendCtx = document.getElementById('trendChart').getContext('2d');
        const chartData = @Html.Raw(Json.Serialize(Model.ChartData));

        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: chartData.labels,
                datasets: [
                    {
                        label: 'المهرجانات',
                        data: chartData.festivalsData,
                        borderColor: 'rgba(40, 167, 69, 1)',
                        backgroundColor: 'rgba(40, 167, 69, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    },
                    {
                        label: 'الكتب',
                        data: chartData.booksData,
                        borderColor: 'rgba(23, 162, 184, 1)',
                        backgroundColor: 'rgba(23, 162, 184, 0.1)',
                        tension: 0.4,
                        fill: true,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index'
                },
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            font: {
                                size: 14
                            },
                            padding: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(255, 255, 255, 0.9)',
                        titleColor: '#000',
                        bodyColor: '#000',
                        borderColor: '#ddd',
                        borderWidth: 1,
                        padding: 10,
                        displayColors: true,
                        callbacks: {
                            label: function(context) {
                                return `${context.dataset.label}: ${context.parsed.y}`;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    }
                },
                animation: {
                    duration: 2000,
                    easing: 'easeInOutQuart'
                }
            }
        });

        // تحديث الإحصائيات كل 5 دقائق
        setInterval(function() {
            location.reload();
        }, 300000);
    </script>
} 