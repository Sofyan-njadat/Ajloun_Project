@model IEnumerable<Ajloun_Project.Models.BookCategory>
@{
    ViewData["Title"] = "إدارة التصنيفات";
}

@section Styles {
    <style>
        .category-container {
            max-width: 700px;
            margin: 40px auto;
            background-color: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }

        h2 {
            color: #2C6E49;
            text-align: center;
            margin-bottom: 25px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            border-bottom: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #2C6E49;
            color: white;
        }

        .add-category-form {
            margin-top: 30px;
            display: flex;
            gap: 10px;
            justify-content: center;
        }

            .add-category-form input[type="text"] {
                padding: 8px;
                width: 60%;
                border: 1px solid #ccc;
                border-radius: 6px;
            }

            .add-category-form button {
                background-color: #2C6E49;
                color: white;
                border: none;
                padding: 8px 16px;
                border-radius: 6px;
            }
            
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 6px;
            text-align: center;
        }
        
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
}

<div class="category-container">
    <h2>📂 إدارة تصنيفات الكتب</h2>
    
    <!-- عرض رسائل النجاح والخطأ -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            تم بنجاح
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            حدث خطأ
        </div>
    }

    <!-- عرض التصنيفات -->
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>اسم التصنيف</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.Name</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- إضافة تصنيف جديد -->
    <form asp-action="AddCategory" method="post" class="add-category-form">
        <input type="text" name="name" placeholder="اسم التصنيف الجديد" required />
        <button type="submit">➕ إضافة</button>
    </form>
</div>
