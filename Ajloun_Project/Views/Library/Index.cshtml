@model IEnumerable<Ajloun_Project.Models.Book>
@{
    ViewData["Title"] = "المكتبة";
    var searchTerm = ViewBag.SearchTerm as string;
}
@{
    Layout = "_Layout";
}

@{
    int pageSize = 15;
    int pageNumber = Convert.ToInt32(Context.Request.Query["page"]);
    if (pageNumber < 1) pageNumber = 1;
    var pagedBooks = Model.Skip((pageNumber - 1) * pageSize).Take(pageSize).ToList();
    int totalPages = (int)Math.Ceiling((double)Model.Count() / pageSize);
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* الحفاظ على نفس ألوان المتغيرات الأصلية */
        :root {
            --primary: #355E3B;
            --secondary: #F2E8CF;
            --background: #EFF5EC;
            --text-dark: #1B1B2F;
            --text-muted: #777;
            --success: #4CAF50;
            --danger: #E53935;
            --accent: #C7AD8F;
            --text-light: #F9F5F0;
            --gold: #FFE15D;
        }

        .lib-main-container {
            background-color: var(--background);
            font-family: 'Tajawal', 'Segoe UI', sans-serif;
            padding-bottom: 40px;
        }

        /* الحفاظ على هيرو سيكشن كما هو */
        .modern-header {
            background: #355E3B;
            background-size: cover;
            background-position: center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            margin-bottom: 50px;
            position: relative;
            border-top: 25px solid #1E2F23;
            border-bottom: 25px solid #1E2F23;
        }

        .lib-header-content {
            color: white;
            z-index: 1;
            padding: 0 20px;
        }

            .lib-header-content h1 {
                font-size: 4rem;
                font-weight: 700;
                margin-bottom: 1rem;
                color: #ffd700;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }

            .lib-header-content .lib-subtitle {
                font-size: 1.5rem;
                color: white;
                margin: 0;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
            }

        /* تصفية الكتب */
        .lib-filter-box {
            background: white;
            padding: 25px;
            border-radius: var(--rounded-md);
            box-shadow: var(--soft-shadow);
            margin-bottom: 40px;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
        }

        .lib-filter-form {
            display: flex;
            align-items: center;
            gap: 15px;
            justify-content: center;
        }

            .lib-filter-form select,
            .lib-filter-form input {
                padding: 12px 20px;
                border-radius: 30px;
                border: 2px solid var(--secondary);
                background: white;
                min-width: 200px;
                font-size: 1rem;
                transition: var(--transition);
                font-family: 'Tajawal', sans-serif;
            }

                .lib-filter-form select:focus,
                .lib-filter-form input:focus {
                    outline: none;
                    border-color: var(--primary);
                    box-shadow: 0 0 0 2px rgba(44, 110, 73, 0.2);
                }

        .lib-filter-btn {
            padding: 12px 30px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 600;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 8px;
            min-width: 120px;
            justify-content: center;
            font-family: 'Tajawal', sans-serif;
        }

            .lib-filter-btn:hover {
                background: #235c3a;
                transform: translateY(-2px);
            }

        /* شبكة الكتب */
        .lib-books-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            padding: 0 20px;
            margin-top: 30px;
        }

        .lib-book-card {
            background: white;
            border-radius: var(--rounded-md);
            box-shadow: var(--soft-shadow);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            transition: transform 0.3s ease;
            position: relative;
            border-top: 5px solid var(--accent);
        }

            .lib-book-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.1);
            }

        .lib-book-cover {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .lib-book-details {
            padding: 18px;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .lib-book-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 10px;
            line-height: 1.4;
            min-height: 3.5rem;
        }

        .lib-book-author {
            font-size: 0.95rem;
            color: var(--text-dark);
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .lib-book-category {
            display: inline-block;
            background: rgba(199, 173, 143, 0.2);
            color: var(--primary);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            margin: 5px 0;
            font-weight: 600;
        }

        .lib-book-availability {
            margin: 12px 0;
            font-size: 1rem;
            font-weight: 600;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .lib-book-availability:before {
                content: "";
                display: inline-block;
                width: 10px;
                height: 10px;
                background-color: var(--success);
                border-radius: 50%;
            }

        .lib-book-actions {
            margin-top: auto;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .lib-book-btn {
            padding: 10px;
            border-radius: var(--rounded-sm);
            text-align: center;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            font-size: 0.95rem;
        }

        .lib-details-btn {
            background: linear-gradient(135deg, var(--secondary), #e0cdb4);
            color: var(--text-dark);
            border: 1px solid var(--accent);
        }

            .lib-details-btn:hover {
                background: linear-gradient(135deg, #e0cdb4, var(--secondary));
            }

        .lib-reserve-btn {
            background: linear-gradient(135deg, var(--primary), #2a3e38);
            color: white;
            border: 1px solid var(--primary);
        }

            .lib-reserve-btn:hover {
                background: linear-gradient(135deg, #2a3e38, var(--primary));
            }

        .lib-unavailable-msg {
            background: rgba(211, 93, 110, 0.1);
            color: var(--danger);
            padding: 10px;
            border-radius: var(--rounded-sm);
            text-align: center;
            font-weight: 600;
            margin-top: 10px;
            border: 1px dashed var(--danger);
            font-size: 0.95rem;
        }

        /* التنسيق للجوال */
        @@media (max-width: 768px) {
            .lib-filter-form {
                flex-direction: column;
                width: 100%;
            }

                .lib-filter-form select,
                .lib-filter-form input,
                .lib-filter-btn {
                    width: 100%;
                }

            .lib-header-content h1 {
                font-size: 2.5rem;
            }

            .lib-books-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }
        }

        /* التصفح بين الصفحات */
        .lib-pagination {
            text-align: center;
            margin: 40px 0 20px;
        }

        .lib-page-link {
            margin: 0 6px;
            padding: 8px 14px;
            border: 1px solid var(--primary);
            color: var(--primary);
            border-radius: var(--rounded-sm);
            text-decoration: none;
            transition: var(--transition);
        }

            .lib-page-link:hover {
                background: rgba(53, 94, 59, 0.1);
            }

        .lib-page-current {
            margin: 0 6px;
            padding: 8px 14px;
            background-color: var(--primary);
            color: white;
            border-radius: var(--rounded-sm);
        }
    </style>
}

<div class="lib-main-container">
    <!-- الحفاظ على هيرو سيكشن كما هو بدون تغيير -->
    <div class="modern-header">
        <div class="overlay">
            <div class="lib-header-content">
                <h1>المكتبة العامة</h1>
                <p class="lib-subtitle">أكبر مكتبة ثقافية في عجلون</p>
            </div>
        </div>
    </div>

    <!-- تصفية الكتب -->
    <div class="lib-filter-box">
        <form asp-action="Index" method="get" class="lib-filter-form">
            <select asp-items="ViewBag.CategoryList" name="categoryId">
                <option value="">كل التصنيفات</option>
            </select>

            <input type="text" name="search" placeholder="ابحث عن كتاب..." value="@searchTerm" />

            <button type="submit" class="lib-filter-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                </svg>
                بحث
            </button>
        </form>
    </div>

    <!-- شبكة الكتب -->
    <div class="lib-books-grid">
        @foreach (var book in pagedBooks)
        {
            <div class="lib-book-card">
                <img src="@book.CoverImageUrl" alt="غلاف @book.Title" class="lib-book-cover" />
                <div class="lib-book-details">
                    <h3 class="lib-book-title">@book.Title</h3>

                    <div class="lib-book-author">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="16" height="16">
                            <path d="M12 12a5 5 0 1 1 0-10 5 5 0 0 1 0 10zm0-2a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm9 11a1 1 0 0 1-2 0v-2a3 3 0 0 0-3-3H8a3 3 0 0 0-3 3v2a1 1 0 0 1-2 0v-2a5 5 0 0 1 5-5h8a5 5 0 0 1 5 5v2z" />
                        </svg>
                        <span>@book.Author</span>
                    </div>

                    @if (book.Category != null)
                    {
                        <div class="lib-book-category">@book.Category.Name</div>
                    }

                    <div class="lib-book-availability">@book.AvailableCopies نسخ متاحة</div>

                    <div class="lib-book-actions">
                        <a class="lib-book-btn lib-details-btn" asp-action="Details" asp-route-id="@book.BookId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                <circle cx="12" cy="12" r="3"></circle>
                            </svg>
                            تفاصيل الكتاب
                        </a>

                        @if (book.AvailableCopies > 0)
                        {
                            <a class="lib-book-btn lib-reserve-btn" asp-action="Reserve" asp-route-id="@book.BookId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                                </svg>
                                احجز الآن
                            </a>
                        }
                        else
                        {
                            <div class="lib-unavailable-msg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                                </svg>
                                غير متاح حالياً
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- التصفح بين الصفحات -->
    <div class="lib-pagination">
        @for (int i = 1; i <= totalPages; i++)
        {
            if (i == pageNumber)
            {
                <span class="lib-page-current">@i</span>
            }
            else
            {
                <a href="?page=@i" class="lib-page-link">@i</a>
            }
        }
    </div>
</div>