@{
    ViewData["Title"] = "المشاركات الثقافية";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #355E3B; /* لون خلفية أخضر فاتح */
            --secondary-color: #FFD700; /* لون النص الأصفر الذهبي */
            --dark-border: #333333; /* لون الإطار الداكن */
            --light-text: #FFFFFF; /* لون النص الأبيض */
            --accent-color: #E8C07D;
            --light-bg: #F9F5EB;
            --dark-text: #333;
        }

        body {
            font-family: 'Cairo', sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--light-bg);
            color: var(--dark-text);
        }

        /* Hero Section */
        .hero-section {
            background-color: var(--primary-color); /* أخضر فاتح */
            color: var(--secondary-color); /* أصفر ذهبي */
            text-align: center;
            padding: 40px 20px; /* تقليل السمك ليتناسب الصورة */
            margin-bottom: 30px;
            position: relative;
            border-top: 30px solid var(--dark-border); /* إطار علوي داكن */
            border-bottom: 30px solid var(--dark-border); /* إطار سفلي داكن */
            font-family: 'Cairo', sans-serif;
        }

            .hero-section h1 {
                font-size: 3.5rem;
                margin: 0;
                font-weight: 900;
                position: relative;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
                font-family: 'Cairo', sans-serif;
            }

            .hero-section p {
                color: var(--light-text); /* نص أبيض */
                font-size: 1.3rem;
                margin-top: 15px;
                max-width: 800px;
                margin-left: auto;
                margin-right: auto;
                position: relative;
                line-height: 1.6;
            }

        /* Filter Section */
        .filter-section {
            text-align: center;
            margin: 30px 0;
            position: relative;
            padding: 0 20px;
        }

            .filter-section::after {
                content: "";
                display: block;
                width: 150px;
                height: 3px;
                background: var(--accent-color);
                margin: 20px auto;
            }

            .filter-section select {
                width: 100%;
                padding: 12px 30px 12px 15px;
                font-size: 1.1rem;
                border-radius: 30px;
                border: 2px solid var(--primary-color);
                background-color: #FFFFFF;
                color: var(--primary-color);
                cursor: pointer;
                appearance: none;
                background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%231A3C34' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
                background-repeat: no-repeat;
                background-position: right 10px center;
                background-size: 1.2em;
                transition: all 0.3s ease;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
                height: 50px;
            }

                .filter-section select:focus {
                    outline: none;
                    box-shadow: 0 0 0 3px rgba(26, 60, 52, 0.2);
                }

        .think-btn {
            background: var(--primary-color);
            color: var(--light-text);
            border: none;
            padding: 12px 25px;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            height: 50px;
            width: 100%;
            justify-content: center;
        }

        .think-btn:hover {
            background: #2D5E4E;
            color: var(--light-text);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

        .think-btn i {
            font-size: 1.2rem;
        }

        /* Posts Section */
        .posts-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 30px;
        }

        .category-section {
            margin-bottom: 50px;
            display: none;
            animation: fadeIn 0.5s ease-out;
        }

            .category-section.active {
                display: block;
            }

            .category-section h2 {
                color: var(--primary-color);
                font-size: 2.2rem;
                border-bottom: 3px solid var(--accent-color);
                padding-bottom: 10px;
                margin-bottom: 30px;
                display: inline-block;
                position: relative;
            }

                .category-section h2::after {
                    content: "";
                    position: absolute;
                    bottom: -5px;
                    right: 0;
                    width: 50%;
                    height: 2px;
                    background: var(--secondary-color);
                }

        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
        }

        .post-card {
            background-color: #FFFFFF;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: all 0.3s ease;
            position: relative;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

            .post-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.12);
            }

            .post-card .post-image {
                width: 100%;
                height: 220px;
                object-fit: cover;
                transition: transform 0.5s ease;
            }

            .post-card:hover .post-image {
                transform: scale(1.05);
            }

            .post-card .post-content {
                padding: 20px;
                position: relative;
            }

            .post-card .post-excerpt {
                color: var(--dark-text);
                font-size: 1rem;
                line-height: 1.7;
                margin-bottom: 20px;
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .post-card .post-meta {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: 15px;
                padding-top: 15px;
                border-top: 1px dashed rgba(0, 0, 0, 0.1);
            }

            .post-card .author {
                color: var(--primary-color);
                font-size: 0.9rem;
                font-weight: 600;
            }

                .post-card .author i {
                    margin-left: 5px;
                    color: var(--accent-color);
                }

            .post-card .read-more {
                background: linear-gradient(to right, var(--primary-color), #2D5E4E);
                color: white;
                border: none;
                padding: 8px 20px;
                border-radius: 30px;
                cursor: pointer;
                font-size: 0.9rem;
                transition: all 0.3s ease;
                display: inline-flex;
                align-items: center;
                box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
            }

                .post-card .read-more:hover {
                    background: linear-gradient(to right, #2D5E4E, var(--primary-color));
                    transform: translateY(-2px);
                    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.15);
                }

                .post-card .read-more i {
                    margin-right: 5px;
                }

        /* Modal Styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

            .modal-overlay.active {
                opacity: 1;
                visibility: visible;
            }

        .modal-container {
            background: white;
            border-radius: 10px;
            width: 80%;
            max-width: 800px;
            max-height: 90vh;
            overflow-y: auto;
            padding: 30px;
            position: relative;
            transform: translateY(20px);
            transition: transform 0.3s ease;
        }

        .modal-overlay.active .modal-container {
            transform: translateY(0);
        }

        .modal-close {
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--primary-color);
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .modal-close:hover {
                background: #2D5E4E;
                transform: rotate(90deg);
            }

        .modal-image {
            width: 100%;
            max-height: 400px;
            object-fit: contain;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .modal-content {
            font-size: 1.1rem;
            line-height: 1.8;
            color: var(--dark-text);
        }

        .modal-author {
            color: var(--primary-color);
            font-weight: bold;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            display: flex;
            align-items: center;
        }

            .modal-author i {
                margin-left: 10px;
                color: var(--accent-color);
            }

        /* Animation */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-section h1

        {
            font-size: 2.5rem;
        }

        .hero-section p {
            font-size: 1.1rem;
        }

        .posts-grid {
            grid-template-columns: 1fr;
        }

        .modal-container {
            width: 95%;
            padding: 20px;
        }

        .filter-section .row {
            gap: 15px;
        }
        
        .filter-section select,
        .think-btn {
            width: 100%;
        }
        }

        /* Floating Button */
        .floating-btn {
            position: fixed;
            bottom: 30px;
            left: 30px;
            background: var(--primary-color);
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.5rem;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            cursor: pointer;
            z-index: 100;
            transition: all 0.3s ease;
        }

            .floating-btn:hover {
                background: #2D5E4E;
                transform: translateY(-5px) scale(1.1);
            }

        /* Category Badge */
        .category-badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background: var(--secondary-color);
            color: var(--primary-color);
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            z-index: 2;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <h1>المشاركات الثقافية</h1>
        <p>مساحة لعرض مشاركات أبناء عجلون</p>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div>
            <div class="row justify-content-center">
                <div class="col-md-5 text-end">
                    <select id="categoryFilter" onchange="filterCategories()">
                        <option value="all">جميع الفئات</option>
                        @foreach (var category in ViewBag.GroupedPosts.Keys)
                        {
                            <option value="@category">@category</option>
                        }
                    </select>
                </div>
                <div class="col-md-5 text-start">
                    <a asp-controller="UserPosts" asp-action="Create" class="btn btn-primary think-btn">
                        <i class="fas fa-pen-fancy"></i> بماذا تفكر؟
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Posts Section -->
    <div class="posts-container">
        @foreach (var group in ViewBag.GroupedPosts)
        {
            <div class="category-section" data-category="@group.Key">
                <h2>@group.Key</h2>
                <div class="posts-grid">
                    @foreach (var post in group.Value)
                    {
                        <div class="post-card">
                            <span class="category-badge">@group.Key</span>
                            @if (!string.IsNullOrEmpty(post.FilePath))
                            {
                                <img src="@post.FilePath" alt="صورة المشاركة" class="post-image" />
                            }
                            <div class="post-content">
                                <p class="post-excerpt">@post.Content</p>
                                <div class="post-meta">
                                    <span class="author">
                                        <i class="fas fa-user"></i> @(post.User?.FullName ?? "مجهول")
                                    </span>
                                    <button class="read-more" onclick="showPostDetails('@post.Content', '@post.FilePath', '@(post.User?.FullName ?? "مجهول")', '@group.Key')">
                                        <i class="fas fa-book-open"></i> التفاصيل
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Modal for Post Details -->
    <div class="modal-overlay" id="postModal">
        <div class="modal-container">
            <div class="modal-close" onclick="closeModal()">
                <i class="fas fa-times"></i>
            </div>
            <img src="" alt="صورة المشاركة" class="modal-image" id="modalImage" style="display:none;">
            <div class="modal-content" id="modalContent"></div>
            <div class="modal-author">
                <i class="fas fa-user"></i> <span id="modalAuthor"></span>
                <span style="margin-right: auto; color: #777; font-size: 0.9rem;" id="modalCategory"></span>
            </div>
        </div>
    </div>

    <script>
        function filterCategories() {
            var selectedCategory = document.getElementById("categoryFilter").value;
            var sections = document.querySelectorAll(".category-section");

            sections.forEach(section => {
                if (selectedCategory === "all" || section.getAttribute("data-category") === selectedCategory) {
                    section.classList.add("active");
                } else {
                    section.classList.remove("active");
                }
            });
        }

        function showPostDetails(content, imagePath, author, category) {
            const modal = document.getElementById("postModal");
            const modalContent = document.getElementById("modalContent");
            const modalImage = document.getElementById("modalImage");
            const modalAuthor = document.getElementById("modalAuthor");
            const modalCategory = document.getElementById("modalCategory");

            modalContent.innerHTML = content;
            modalAuthor.textContent = author;
            modalCategory.textContent = category;

            if (imagePath) {
                modalImage.src = imagePath;
                modalImage.style.display = "block";
            } else {
                modalImage.style.display = "none";
            }

            modal.classList.add("active");
            document.body.style.overflow = "hidden";
        }

        function closeModal() {
            const modal = document.getElementById("postModal");
            modal.classList.remove("active");
            document.body.style.overflow = "auto";
        }


        // Show all categories by default
        document.addEventListener("DOMContentLoaded", function () {
            filterCategories();

            // Close modal when clicking outside
            document.getElementById("postModal").addEventListener("click", function(e) {
                if (e.target === this) {
                    closeModal();
                }
            });

            // Show/hide floating button
            window.addEventListener("scroll", function() {
                const floatingBtn = document.querySelector(".floating-btn");
                if (window.scrollY > 300) {
                    floatingBtn.style.display = "flex";
                } else {
                    floatingBtn.style.display = "none";
                }
            });
        });
    </script>
</body>
</html>