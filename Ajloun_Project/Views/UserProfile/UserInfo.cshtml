@model Ajloun_Project.Models.User

@{
    Layout = "~/Views/Shared/_LayoutUserProfile.cshtml";
    ViewData["Title"] = "بياناتي الشخصية";
}

@section Styles {
    <style>
        :root {
            --primary: #2C6E49;
            --primary-light: #4c956c;
            --accent: #D4AF37;
            --text-dark: #1B1B2F;
            --text-light: #4a4a6a;
        }

        .profile-wrapper {
            max-width: 700px;
            margin: 0 auto;
            padding: 20px;
        }

        .profile-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .profile-title {
            color: var(--primary);
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 10px;
            position: relative;
            display: inline-block;
        }

            .profile-title:after {
                content: '';
                position: absolute;
                bottom: -8px;
                left: 0;
                width: 100%;
                height: 3px;
                background: var(--accent);
            }

        .profile-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            padding: 30px;
            position: relative;
        }

        .profile-img-container {
            width: 120px;
            height: 120px;
            margin: 0 auto 25px;
            position: relative;
        }

        .profile-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
            border: 3px solid var(--accent);
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

        .profile-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .info-item {
            margin-bottom: 15px;
        }

        .info-label {
            display: block;
            font-weight: 600;
            color: var(--primary);
            margin-bottom: 5px;
            font-size: 14px;
        }

        .info-value {
            padding: 8px 12px;
            background: #f9f9f9;
            border-radius: 6px;
            border-right: 3px solid var(--accent);
        }

        .empty-value {
            color: #999;
            font-style: italic;
        }

        @@media (max-width: 768px) {
            .profile-info {
                grid-template-columns: 1fr;
            }

            .profile-title {
                font-size: 24px;
            }
        }
    </style>
}

<div class="profile-wrapper">
    <div class="profile-header">
        <h1 class="profile-title">الملف الشخصي</h1>
    </div>

    <div class="profile-card">
        <div class="profile-img-container">
            <img src="~/images/users/@(Model.ProfileImage ?? "default.jpg")" class="profile-img" alt="صورة المستخدم">
        </div>

        <div class="profile-info">
            <div class="info-item">
                <span class="info-label">الاسم الكامل</span>
                <div class="info-value">@Model.FullName</div>
            </div>

            <div class="info-item">
                <span class="info-label">البريد الإلكتروني</span>
                <div class="info-value">@Model.Email</div>
            </div>

            <div class="info-item">
                <span class="info-label">رقم الهاتف</span>
                <div class="info-value">
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        @Model.Phone
                    }
                    else
                    {
                        <span class="empty-value">غير محدد</span>
                    }
                </div>
            </div>

            <div class="info-item">
                <span class="info-label">الجنس</span>
                <div class="info-value">
                    @if (!string.IsNullOrEmpty(Model.Gender))
                    {
                        @Model.Gender
                    }
                    else
                    {
                        <span class="empty-value">غير محدد</span>
                    }
                </div>
            </div>

            <div class="info-item">
                <span class="info-label">تاريخ الميلاد</span>
                <div class="info-value">
                    @if (Model.BirthDate.HasValue)
                    {
                        @Model.BirthDate.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span class="empty-value">غير محدد</span>
                    }
                </div>
            </div>

            <div class="info-item">
                <span class="info-label">العنوان</span>
                <div class="info-value">
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        @Model.Address
                    }
                    else
                    {
                        <span class="empty-value">غير محدد</span>
                    }
                </div>
            </div>

            <div class="info-item">
                <span class="info-label">الرقم الوطني</span>
                <div class="info-value">
                    @if (!string.IsNullOrEmpty(Model.NationalId))
                    {
                        @Model.NationalId
                    }
                    else
                    {
                        <span class="empty-value">غير محدد</span>
                    }
                </div>
            </div>

            <div class="info-item">
                <span class="info-label">تاريخ التسجيل</span>
                <div class="info-value">
                    @if (Model.CreatedAt.HasValue)
                    {
                        @Model.CreatedAt.Value.ToString("dd/MM/yyyy")
                    }
                    else
                    {
                        <span class="empty-value">غير محدد</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>