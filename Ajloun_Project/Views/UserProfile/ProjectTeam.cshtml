<style>
    :root {
        --primary: #355E3B; /* Forest Green */
        --secondary: #A9BA9D; /* Moss Green */
        --accent: #E3D26F; /* Light Gold */
        --dark: #1E2F23; /* Deep Earth */
        --light: #EFF5EC; /* Mint White */
        --text: #2D2D2D; /* Dark Gray Text */
        --text-light: #6B6B6B; /* Light Gray Text */
        --white: #FFFFFF;
        --black: #000000;
        --overlay: rgba(0, 0, 0, 0.5);
    }

    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, var(--dark) 0%, var(--primary) 100%);
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
    }

    /* Particle background */
    .particles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }

    .particle {
        position: absolute;
        background: var(--accent);
        border-radius: 50%;
        opacity: 0.6;
    }

    .container {
        position: relative;
        z-index: 2;
        padding: 4rem 0;
    }

    .section-title {
        font-family: 'Playfair Display', serif;
        font-size: 3rem;
        font-weight: 700;
        color: var(--light);
        text-transform: uppercase;
        letter-spacing: 2px;
        position: relative;
        margin-bottom: 4rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.4);
    }

        .section-title::after {
            content: '';
            width: 100px;
            height: 5px;
            background: linear-gradient(to right, var(--accent), var(--secondary));
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 3px;
        }

    .card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        background: var(--light);
        position: relative;
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3) !important;
        }

    .card-img-top {
        height: 230px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 230px;
        background: var(--overlay);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--accent);
        font-size: 1.2rem;
        font-weight: 600;
    }

    .card:hover .card-overlay {
        opacity: 1;
    }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    .card-body {
        padding: 2rem;
        text-align: center;
    }

    .card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 0.5rem;
        position: relative;
    }

        .card-title::before {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 50%;
            background: var(--accent);
            transition: width 0.3s ease, left 0.3s ease;
        }

    .card:hover .card-title::before {
        width: 50%;
        left: 25%;
    }

    .card-text {
        font-size: 1rem;
        color: var(--text-light);
        margin-bottom: 1.5rem;
    }

    .social-icons {
        margin-top: 1rem;
    }

        .social-icons a {
            display: inline-block;
            width: 40px;
            height: 40px;
            line-height: 40px;
            border-radius: 50%;
            background: var(--primary);
            color: var(--light);
            font-size: 1.2rem;
            margin: 0 0.5rem;
            transition: transform 0.3s ease, background 0.3s ease;
        }

            .social-icons a:hover {
                transform: scale(1.2);
                background: var(--accent);
            }
</style>

