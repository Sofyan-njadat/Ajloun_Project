@{
    Layout = "~/Views/Shared/_LayoutUserProfile.cshtml";
    ViewData["Title"] = "تغيير كلمة المرور";
}

@section Styles {
    <style>
        :root {
            --form-padding: clamp(20px, 5vw, 40px);
            --form-radius: clamp(12px, 3vw, 16px);
            --input-padding: clamp(10px, 3vw, 14px);
            --font-size: clamp(14px, 4vw, 16px);
            --heading-size: clamp(1.5rem, 6vw, 2rem);
        }

        .form-wrapper {
            background-color: white;
            padding: var(--form-padding);
            border-radius: var(--form-radius);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            width: min(600px, 90vw);
            margin: 2rem auto;
            transition: all 0.3s ease;
        }

            .form-wrapper h2 {
                color: var(--primary);
                margin-bottom: 1.5rem;
                font-size: var(--heading-size);
                text-align: center;
                position: relative;
                padding-bottom: 0.5rem;
            }

                .form-wrapper h2::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    right: 50%;
                    transform: translateX(50%);
                    width: 80px;
                    height: 3px;
                    background: var(--accent);
                    border-radius: 3px;
                }

            .form-wrapper label {
                font-weight: bold;
                color: var(--text-dark);
                font-size: var(--font-size);
                margin-bottom: 0.5rem;
                display: block;
            }

            .form-wrapper .form-control {
                padding: var(--input-padding);
                font-size: var(--font-size);
                border-radius: 8px;
                border: 1px solid #ddd;
                transition: all 0.3s ease;
                width: 100%;
            }

                .form-wrapper .form-control:focus {
                    border-color: var(--primary);
                    box-shadow: 0 0 0 3px rgba(44, 110, 73, 0.2);
                }

            .form-wrapper .btn-primary {
                background-color: var(--primary);
                border: none;
                padding: var(--input-padding) 2rem;
                font-size: var(--font-size);
                font-weight: 600;
                border-radius: 8px;
                width: 100%;
                transition: all 0.3s ease;
                position: relative;
                overflow: hidden;
            }

                .form-wrapper .btn-primary:hover {
                    background-color: var(--primary-dark);
                    transform: translateY(-2px);
                    box-shadow: 0 4px 12px rgba(44, 110, 73, 0.3);
                }

                .form-wrapper .btn-primary::after {
                    content: '';
                    position: absolute;
                    top: -50%;
                    right: -50%;
                    width: 40px;
                    height: 200%;
                    background: rgba(255, 255, 255, 0.2);
                    transform: rotate(30deg);
                    transition: all 0.3s ease;
                }

                .form-wrapper .btn-primary:hover::after {
                    right: 120%;
                }

        .alert {
            padding: var(--input-padding);
            font-size: var(--font-size);
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .password-input-container {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: var(--text-light);
            font-size: calc(var(--font-size) + 2px);
        }
    </style>
}

<div class="form-wrapper">
    <h2>تغيير كلمة المرور</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    else if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="ChangeUserPassword" asp-controller="UserProfile" method="post">
        <div class="mb-3 password-input-container">
            <label for="OldPassword">كلمة المرور الحالية</label>
            <input type="password" name="OldPassword" class="form-control" required />
            <i class="fas fa-eye password-toggle" onclick="togglePassword(this)"></i>
        </div>
        <div class="mb-3 password-input-container">
            <label for="NewPassword">كلمة المرور الجديدة</label>
            <input type="password" name="NewPassword" class="form-control" required />
            <i class="fas fa-eye password-toggle" onclick="togglePassword(this)"></i>
        </div>
        <div class="mb-3 password-input-container">
            <label for="ConfirmPassword">تأكيد كلمة المرور</label>
            <input type="password" name="ConfirmPassword" class="form-control" required />
            <i class="fas fa-eye password-toggle" onclick="togglePassword(this)"></i>
        </div>
        <button type="submit" class="btn btn-primary">
            <span>تحديث كلمة المرور</span>
        </button>
    </form>
</div>

@section Scripts {
    <script>
        function togglePassword(icon) {
            const input = icon.previousElementSibling;
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("fa-eye", "fa-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("fa-eye-slash", "fa-eye");
            }
        }
    </script>
}