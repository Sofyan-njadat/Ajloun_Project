@model Ajloun_Project.Models.User
@{
    ViewData["Title"] = "تفاصيل المستخدم";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/statistics.css" asp-append-version="true">
<style>
    .user-details-form .form-label {
        font-weight: bold;
        color: #333;
    }
    .user-details-form .form-control[readonly] {
        background: #f8f9fa;
        color: #444;
        border: 1px solid #e0e0e0;
        box-shadow: none;
        font-size: 1.05rem;
    }
    .user-details-form .row + .row {
        margin-top: 18px;
    }
    .user-details-card {
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        background: #fff;
        padding: 32px 24px 16px 24px;
    }
</style>
<div class="container-fluid py-4">
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-3">تفاصيل المستخدم</h1>
                <p class="mb-0">مديرية ثقافة عجلون</p>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="user-details-card">
                <form class="user-details-form" autocomplete="off">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">الاسم الكامل</label>
                            <input type="text" class="form-control" value="@Model.FullName" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">البريد الإلكتروني</label>
                            <input type="text" class="form-control" value="@Model.Email" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">الهاتف</label>
                            <input type="text" class="form-control" value="@Model.Phone" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">الجنس</label>
                            <input type="text" class="form-control" value="@Model.Gender" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">تاريخ الميلاد</label>
                            <input type="text" class="form-control" value="@(Model.BirthDate?.ToString("yyyy-MM-dd") ?? "-")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">العنوان</label>
                            <input type="text" class="form-control" value="@Model.Address" readonly />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">الرقم الوطني</label>
                            <input type="text" class="form-control" value="@Model.NationalId" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">تاريخ الإنشاء</label>
                            <input type="text" class="form-control" value="@(Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")" readonly />
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a href="/Admin/Users" class="btn btn-secondary">
                            <i class="fas fa-arrow-right"></i> رجوع للقائمة
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 