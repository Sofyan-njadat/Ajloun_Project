@model Ajloun_Project.Models.AssociationCategory

@{
    ViewData["Title"] = "تعديل المنطقة";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/css/statistics.css" asp-append-version="true">
<!-- إضافة SweetAlert CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
<!-- إضافة SweetAlert JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

<div class="container-fluid py-4">
    <div class="dashboard-header">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="mb-3">تعديل المنطقة</h1>
                <p class="mb-0">مديرية ثقافة عجلون</p>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="ManageCategories" class="btn btn-light">
                    <i class="fas fa-arrow-right"></i> العودة إلى قائمة المناطق
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">تعديل المنطقة</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditCategory" asp-route-id="@Model.CategoryId" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CategoryId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">اسم المنطقة</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5">
                                <i class="fas fa-save"></i> حفظ التغييرات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // إظهار رسائل النجاح والخطأ باستخدام SweetAlert
        $(document).ready(function () {
            // تحقق من وجود رسائل نجاح أو خطأ
            @if (TempData["Success"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'success',
                    title: 'تم بنجاح',
                    text: '',
                    confirmButtonText: 'حسناً'
                });
                </text>
            }

            @if (TempData["Error"] != null)
            {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'حدث خطأ',
                    text: '',
                    confirmButtonText: 'حسناً'
                });
                </text>
            }
        });
    </script>
} 