@model IEnumerable<AjlounProject.ViewModels.CraftOrderViewModel>

@{
    ViewData["Title"] = "طلبات شراء الحرف اليدوية";
}

<div class="container my-4" dir="rtl">
    <h2 class="mb-4 text-end">طلبات شراء الحرف اليدوية</h2>

    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>اسم الحرفة</th>
                <th>اسم المستخدم</th>
                <th>الكمية</th>
                <th>تاريخ الطلب</th>
                <th>الحالة</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CraftTitle</td>
                    <td>@order.UserName</td>
                    <td>@order.Quantity</td>
                    <td>@order.OrderDate?.ToString("yyyy-MM-dd hh:mm tt")</td>
                    <td>
                        @if (order.Status == "Approved")
                        {
                            <span class="badge bg-success">موافق عليه</span>
                        }
                        else if (order.Status == "Rejected")
                        {
                            <span class="badge bg-danger">مرفوض</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">قيد الانتظار</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
