@{
	ViewData["Title"] = "Dashboard";
}



<!-- المحتوى الرئيسي -->
<div class="col-md-10 content">
	<h3>مرحبًا بك في لوحة التحكم</h3>
	<p>هنا يمكنك إدارة النظام ومتابعة الإحصائيات والبيانات المهمة.</p>

	<!-- إحصائيات سريعة -->
	<div class="row">
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">عدد المستخدمين</h5>
					<p class="card-text">1000 مستخدم</p>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">عدد المنتجات</h5>
					<p class="card-text">150 منتج</p>
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">الطلبات الجديدة</h5>
					<p class="card-text">20 طلب جديد</p>
				</div>
			</div>
		</div>
	</div>

	<!-- رسم بياني أو بيانات أخرى -->
	<div class="mt-4">
		<h4>الإحصائيات الشهرية</h4>
		<div class="alert alert-info" role="alert">
			هنا يمكن عرض الرسم البياني للإحصائيات أو أي بيانات أخرى.
		</div>
	</div>
</div>


