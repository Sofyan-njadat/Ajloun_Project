@model Ajloun_Project.Models.Handicraft
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="craft-image-container">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid craft-image">
                }
                else
                {
                    <img src="~/Images/craft-placeholder.jpg" alt="Craft placeholder" class="img-fluid craft-image">
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="craft-details">
                <h1 class="craft-title">@Model.Title</h1>
                <div class="craft-meta">
                    <span class="craft-category">@Model.Category</span>
                    @if (Model.CreatedAt.HasValue)
                    {
                        <span class="craft-date">تم الإضافة في @Model.CreatedAt.Value.ToString("dd/MM/yyyy")</span>
                    }
                </div>

                <div class="craft-description">
                    <h4>وصف الحرفة</h4>
                    <p>@Model.Description</p>
                </div>

                <div class="contact-info">
                    <h4>معلومات التواصل</h4>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <span>رقم الهاتف:0720012088
                        </span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>الموقع:عجلون  </span>
                    </div>
               
                    <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                        <span>البريد الإلكتروني:  sara@gmail.com </span>
                        </div>
                    
                </div>
              
                <div class="form-actions">

                    <a href="@Url.Action("Index")" class="btn btn-secondary back-btn">
                        <i class="fas fa-arrow-right"></i> العودة للحرفيين
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .craft-image-container {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .craft-image {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .craft-details {
        height: 100%;
        padding: 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .craft-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 10px;
        color: var(--primary, #1E2F23);
    }

    .craft-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 20px;
    }

    .craft-category {
        background: #f5f5f5;
        color: #555;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .craft-date {
        color: #777;
        font-size: 0.9rem;
    }

    .craft-description {
        margin-bottom: 25px;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 10px;
    }

    .craft-description h4 {
        font-size: 1.2rem;
        margin-bottom: 10px;
        color: var(--primary, #1E2F23);
        font-weight: 600;
    }

    .craft-description p {
        color: #555;
        line-height: 1.6;
    }

    .contact-info {
        margin-bottom: 25px;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 10px;
    }

    .contact-info h4 {
        font-size: 1.2rem;
        margin-bottom: 15px;
        color: var(--primary, #1E2F23);
        font-weight: 600;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
        color: #555;
    }

    .contact-item i {
        color: var(--primary, #1E2F23);
        font-size: 1.1rem;
    }

    .form-actions {
        display: flex;
        gap: 15px;
    }

    .contact-btn, .back-btn {
        flex: 1;
        padding: 12px 15px;
        border-radius: 25px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.3s;
    }

    .contact-btn {
        background: var(--primary, #1E2F23);
        border-color: var(--primary, #1E2F23);
    }

    .contact-btn:hover {
        background: #2c4033;
        transform: translateY(-2px);
    }

    .back-btn {
        background: #6c757d;
        border-color: #6c757d;
    }

    .back-btn:hover {
        background: #5a6268;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .form-actions {
            flex-direction: column;
        }
    }
</style> 