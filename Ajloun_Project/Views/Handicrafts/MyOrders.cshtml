@model IEnumerable<Ajloun_Project.Models.CraftOrder>
@{
    ViewData["Title"] = "طلباتي";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <h1>طلبات الحرف اليدوية</h1>
                <p class="text-muted">سجل طلباتك السابقة والحالية</p>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 empty-orders">
                    <div class="empty-icon mb-3">
                        <i class="fas fa-shopping-bag"></i>
                    </div>
                    <h3>لا يوجد لديك طلبات بعد</h3>
                    <p class="text-muted">ابدأ بالتسوق واكتشاف الحرف اليدوية التقليدية</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary mt-3">
                        <i class="fas fa-shopping-cart"></i> تسوق الآن
                    </a>
                </div>
            }
            else
            {
                <div class="orders-container">
                    @foreach (var order in Model)
                    {
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
                                    <div class="order-date">
                                        <i class="far fa-calendar"></i>
                                        @order.OrderDate?.ToString("dd/MM/yyyy")
                                    </div>
                                    <div class="order-id">
                                        <i class="fas fa-hashtag"></i>
                                        رقم الطلب: @order.OrderId
                                    </div>
                                </div>
                                <div class="order-status @order.Status?.ToLower()">
                                    @GetStatusInArabic(order.Status)
                                </div>
                            </div>
                            <div class="order-body">
                                <div class="order-product">
                                    <div class="product-image">
                                        @if (order.Craft != null && !string.IsNullOrEmpty(order.Craft.ImageUrl))
                                        {
                                            <img src="@order.Craft.ImageUrl" alt="@order.Craft.Title" class="img-fluid">
                                        }
                                        else
                                        {
                                            <img src="~/Images/craft-placeholder.jpg" alt="Craft placeholder" class="img-fluid">
                                        }
                                    </div>
                                    <div class="product-details">
                                        <h3 class="product-title">@(order.Craft?.Title ?? "منتج غير متوفر")</h3>
                                        <div class="product-category">@order.Craft?.Category</div>
                                        <div class="product-price">@order.Craft?.Price jd</div>
                                    </div>
                                    <div class="order-quantity">
                                        <span class="quantity-label">الكمية:</span>
                                        <span class="quantity-value">@order.Quantity</span>
                                    </div>
                                    <div class="order-total">
                                        <span class="total-label">المجموع:</span>
                                        <span class="total-value">@(order.Quantity * order.Craft?.Price) jd</span>
                                    </div>
                                </div>
                            </div>
                            <div class="order-footer">
                                <a href="@Url.Action("Details", new { id = order.CraftId })" class="btn btn-outline-primary view-btn">
                                    <i class="fas fa-eye"></i> عرض المنتج
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }

            <div class="text-center mt-4">
                <a href="@Url.Action("Index")" class="btn btn-secondary back-btn">
                    <i class="fas fa-arrow-right"></i> العودة للمنتجات
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .page-header {
        margin-bottom: 30px;
    }

        .page-header h1 {
            color: var(--primary, #1E2F23);
            font-weight: 700;
            margin-bottom: 5px;
        }

    .empty-orders {
        padding: 50px 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .empty-icon {
        font-size: 4rem;
        color: #ddd;
    }

    .orders-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .order-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

        .order-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: #f9f9f9;
        border-bottom: 1px solid #eee;
    }

    .order-info {
        display: flex;
        gap: 15px;
    }

    .order-date, .order-id {
        font-size: 0.9rem;
        color: #666;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .order-status {
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-align: center;
    }

    .pending {
        background: #FFD600;
        color: #333;
    }

    .approved, .completed {
        background: #4CAF50;
        color: white;
    }

    .rejected, .cancelled {
        background: #F44336;
        color: white;
    }

    .processing {
        background: #2196F3;
        color: white;
    }

    .shipped {
        background: #9C27B0;
        color: white;
    }

    .order-body {
        padding: 20px;
    }

    .order-product {
        display: grid;
        grid-template-columns: 100px 1fr auto auto;
        gap: 20px;
        align-items: center;
    }

    .product-image {
        width: 100px;
        height: 100px;
        border-radius: 10px;
        overflow: hidden;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .product-details {
        display: flex;
        flex-direction: column;
    }

    .product-title {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 5px;
        color: var(--primary, #1E2F23);
    }

    .product-category {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 5px;
    }

    .product-price {
        font-weight: 600;
        color: var(--primary, #1E2F23);
    }

    .order-quantity, .order-total {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .quantity-label, .total-label {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 5px;
    }

    .quantity-value, .total-value {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--primary, #1E2F23);
    }

    .order-footer {
        padding: 15px 20px;
        border-top: 1px solid #eee;
        text-align: right;
    }

    .view-btn {
        border-radius: 20px;
        padding: 8px 20px;
        transition: all 0.3s;
    }

        .view-btn:hover {
            transform: translateY(-2px);
        }

    .back-btn {
        padding: 10px 25px;
        border-radius: 25px;
        font-weight: 500;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .back-btn:hover {
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .order-product {
            grid-template-columns: 80px 1fr;
            grid-row-gap: 15px;
        }

        .order-quantity, .order-total {
            grid-column: span 2;
            flex-direction: row;
            justify-content: space-between;
        }
    }
</style>

@functions {
    public string GetStatusInArabic(string status)
    {
        return status switch
        {
            "Pending" => "قيد الانتظار",
            "Approved" => "تمت الموافقة",
            "Rejected" => "مرفوض",
            "Processing" => "قيد التجهيز",
            "Shipped" => "تم الشحن",
            "Completed" => "مكتمل",
            "Cancelled" => "ملغي",
            _ => status
        };
    }
} 