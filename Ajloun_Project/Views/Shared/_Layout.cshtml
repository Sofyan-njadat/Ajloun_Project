    @RenderSection("Styles", required: false)
    <style>
        /* تحسينات عامة للشريط */
        header {
            /* z-index: 1000; */
            position: relative;
        }

        /* تحسينات القوائم المنسدلة */
        .dropdown > a::after {
            display: none !important;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #2E3A2A; /* نفس لون الـ navbar */
            color: #fff; /* لون النصوص أبيض مثل الـ navbar */
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1500; /* z-index أعلى من الـ header لضمان الظهور */
            border-radius: 0 0 5px 5px;
        }

            .dropdown-content a {
                color: #fff !important; /* لون النصوص داخل الـ dropdown أبيض */
            }

        .dropdown.show-dropdown .dropdown-content {
            display: block;
        }


        /* تحسينات أزرار المستخدم */
        .auth-buttons {
            display: flex !important;
            align-items: center !important;
            gap: 10px !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        .auth-btn {
            width: 36px;
            height: 36px;
            border-radius: 50% !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            border: none !important;
            transition: all 0.3s ease;
        }

            .auth-btn:hover {
                transform: scale(1.1);
            }

        .profile-btn {
            background: #FFD600 !important;
            color: #222 !important;
        }

        .logout-btn {
            background: #f14d21 !important;
            color: #fff !important;
        }

        .login-btn {
            background: transparent !important;
            color: #fff !important;
            border: 1px solid #fff !important;
        }

        /* تعديلات للجوال */
        @@media (max-width: 991px) {
            .auth-btn {
                width: 32px;
                height: 32px;
                font-size: 0.9rem !important;
            }
            /* تحسين الـ responsive للـ dropdown */
            .dropdown {
                position: relative;
                width: 100%;
            }

            .dropdown-content {
                position: relative; /* لتجنب مشاكل الموضع في الـ responsive */
                width: 100%;
                background-color: #2E3A2A; /* نفس لون الـ navbar */
                color: #fff; /* لون النصوص */
                z-index: 1001; /* نفس الـ z-index */
            }

                .dropdown-content a {
                    color: #fff !important;
                    padding: 10px 20px;
                    display: block;
                    text-align: right;
                }

            .dropdown:hover .dropdown-content {
                display: none; /* لأننا في الجوال نعتمد على النقر */
            }

            .dropdown.active .dropdown-content {
                display: block; /* يظهر عند النقر */
            }


        }

        .dropdown-content {
            z-index: 9999 !important; /* 🔥 أعلى من أي شيء */
            position: absolute;
        }

        .dropdown-content {
            overflow: visible!important;
        }

        nav a:hover {
            background-color: #263a2c;
            color: white !important;
            border-radius: 5px;
            font-weight: 600;
        }

        .dropdown-content a:hover {
            background-color: #2c3e2e;
            color: white;
            font-weight: 400;
        }



        .translate-box {
            width: 140px;
            height: 30px;
            display: inline-block;
            vertical-align: middle;
            position: relative;
        }


.login-text-responsive .mobile-text {
    display: none;
}

.login-text-responsive .desktop-icon {
    display: inline-block;
}
