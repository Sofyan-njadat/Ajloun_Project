@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <div class="logo">مديرية الثقافة</div>

        <!-- Burger Menu -->
        <div class="burger" onclick="toggleMenu()">☰</div>

        <nav id="main-nav">
            <a asp-controller="Home" asp-action="Index">الرئيسية</a>
            <a asp-controller="Library" asp-action="Index">المكتبة</a>
            <a asp-controller="News" asp-action="Index">الأخبار</a>
            <a asp-controller="UserProfile" asp-action="EditUserInfo">الملف الشخصي</a>
            <a asp-controller="Home" asp-action="Privacy">سياسة الخصوصية</a>
            <a asp-controller="TimeLine" asp-action="TimeLine">الجدول الزمني</a>
            <a asp-controller="Home" asp-action="Articles">المقالات</a>
            <a asp-controller="ArtWorks" asp-action="ArtWorks">الاعمال الفنية </a>
            <a asp-controller="Gallery" asp-action="Gallery"> معرض الصور  </a>
            <a asp-controller="Category" asp-action="Index">   الدورات </a>



        </nav>


        <!-- Translate + Auth -->
        <div class="translate-auth">
            <div class="translate-box" id="google_translate_element"></div>

            <div class="auth-buttons">
                @{
                    var userId = Context.Session.GetInt32("UserId");
                }

                @if (userId == null)
                {
                    <a href="/Account/Login" class="login">تسجيل الدخول</a>
                }
                else
                {
                    <a href="/Account/Profile" class="profile">الملف الشخصي</a>
                    <form method="post" action="/Account/Logout" style="display:inline;">
                        <button type="submit" class="logout">تسجيل الخروج</button>
                    </form>
                }
            </div>
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <div class="footer-columns">
            <div class="footer-col">
                <h4>روابط سريعة</h4>
                <a href="/">الرئيسية</a>
                <a href="/About">عنّا</a>
            </div>
            <div class="footer-col">
                <h4>تواصل معنا</h4>
                <p>عمان - الأردن</p>
                <p>06-1234567</p>
                <p>info@culture.gov.jo</p>
            </div>
            <div class="footer-col">
                <h4>تابعنا</h4>
                <p><i class="fab fa-facebook"></i> Facebook</p>
                <p><i class="fab fa-twitter"></i> Twitter</p>
                <p><i class="fab fa-youtube"></i> YouTube</p>
            </div>
        </div>
        <p style="margin-top: 1rem;">© 2025 مديرية الثقافة - جميع الحقوق محفوظة</p>
    </footer>

    <!-- Google Translate -->
    <script type="text/javascript">
        function googleTranslateElementInit() {
          new google.translate.TranslateElement({
            pageLanguage: 'ar',
            includedLanguages: 'ar,en,fr',
            layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL
          }, 'google_translate_element');
        }
    </script>
    <script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    <!-- Burger Menu Toggle -->
    <script>
        function toggleMenu() {
          document.getElementById("main-nav").classList.toggle("show");
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
