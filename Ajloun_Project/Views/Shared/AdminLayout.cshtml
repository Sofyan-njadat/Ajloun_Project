@using Microsoft.AspNetCore.Http
@using Ajloun_Project.Models
@inject MyDbContext _db
@{
    var context = Context;
    var httpContext = context.RequestServices.GetService(typeof(IHttpContextAccessor)) as IHttpContextAccessor;
    var session = httpContext?.HttpContext?.Session;
    var email = session?.GetString("email");
    var isAdmin = false;
    if (!string.IsNullOrEmpty(email))
    {
        isAdmin = _db.Admins.Any(a => a.Email == email);
    }
    if (!isAdmin)
    {
        context.Response.Redirect("/User/signIn");
    }
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - مديرية ثقافة عجلون</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
    <style>
        :root {
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
            --header-height: 60px;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Sidebar Styles */
        .sidebar {
            position: fixed;
            top: 0;
            right: 0;
            height: 100vh;
            width: var(--sidebar-width);
            background: #2c3e50;
            transition: all 0.3s ease;
            z-index: 1000;
            overflow-y: auto;
        }

        .sidebar.collapsed {
            width: var(--sidebar-collapsed-width);
        }

        .sidebar-header {
            height: var(--header-height);
            display: flex;
            align-items: center;
            padding: 0 1rem;
            background: #1a252f;
            color: white;
            position: relative;
        }

        .sidebar-title {
            transition: opacity 0.3s ease;
            white-space: nowrap;
            overflow: hidden;
            margin-right: auto;
        }

        .sidebar.collapsed .sidebar-title {
            opacity: 0;
            display: none;
        }

        .sidebar-menu {
            padding: 1rem 0;
        }

        .menu-item {
            padding: 0.8rem 1rem;
            color: #ecf0f1;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .menu-item:hover {
            background: #34495e;
            color: white;
        }

        .menu-item i {
            width: 20px;
            margin-left: 10px;
            font-size: 1.2rem;
        }

        .menu-text {
            transition: opacity 0.3s ease;
            white-space: nowrap;
        }

        .sidebar.collapsed .menu-text {
            opacity: 0;
            display: none;
        }

        .sidebar.collapsed .menu-item {
            padding: 0.8rem;
            justify-content: center;
        }

        .sidebar.collapsed .menu-item i {
            margin-left: 0;
        }

        /* Main Content Styles */
        .main-content {
            margin-right: var(--sidebar-width);
            transition: all 0.3s ease;
            min-height: 100vh;
            background: #f8f9fa;
        }

        .main-content.expanded {
            margin-right: var(--sidebar-collapsed-width);
        }

        /* Burger Menu Button */
        .burger-menu {
            position: fixed;
            top: 10px;
            right: 15px;
            z-index: 1001;
            background: #2c3e50;
            border: none;
            color: white;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .burger-menu:hover {
            background: #34495e;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(100%);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-content {
                margin-right: 0;
            }

            .burger-menu {
                display: flex;
            }
        }
    </style>
</head>
<body>
    <button class="burger-menu" id="burgerMenu">
        <i class="fas fa-bars"></i>
    </button>

    <div class="sidebar" id="sidebar">
