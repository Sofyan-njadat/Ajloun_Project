@model Ajloun_Project.Models.Artwork
@{
    ViewData["Title"] = "إضافة عمل فني جديد";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600&display=swap" rel="stylesheet">
    <style>
        .form-container {
            max-width: 1000px;
            margin: 2rem auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .form-header {
            background-color: #355E3B;
            padding: 20px;
            text-align: center;
            border-radius: 10px 10px 0 0;
        }

        .form-header h1 {
            color: #FFD700;
            font-family: 'Cairo', sans-serif;
            font-size: 2rem;
            margin: 0;
        }

        .form-content {
            padding: 2rem;
        }

        .form-row {
            display: flex;
            gap: 20px;
            margin-bottom: 1.5rem;
        }

        .form-group {
            flex: 1;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #444;
            margin-bottom: 8px;
            font-family: 'Cairo', sans-serif;
            font-size: 1rem;
        }

        .form-control {
            width: 100%;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-family: 'Cairo', sans-serif;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #355E3B;
            box-shadow: 0 0 0 0.2rem rgba(53, 94, 59, 0.25);
            outline: none;
        }

        textarea.form-control {
            resize: vertical;
            min-height: 100px;
        }

        .buttons-container {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .btn {
            padding: 10px 30px;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            font-family: 'Cairo', sans-serif;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            min-width: 150px;
            text-align: center;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn-submit {
            background: #355E3B;
            color: white;
        }

        .btn-submit:hover {
            background: #2A4A2E;
            transform: translateY(-2px);
        }

        .btn-back {
            background: #6c757d;
            color: white;
        }

        .btn-back:hover {
            background: #5a6268;
            color: white;
        }

        .validation-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 4px;
            font-family: 'Cairo', sans-serif;
        }

        input[type="file"].form-control {
            padding: 8px;
        }

        input[type="file"].form-control::file-selector-button {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            background-color: #355E3B;
            color: white;
            font-family: 'Cairo', sans-serif;
            margin-right: 10px;
            cursor: pointer;
        }
    </style>
}

<div class="form-container">
    <div class="form-header">
        <h1>طلب إضافة عمل فني جديد</h1>
    </div>
    
    <div class="form-content">
        <form asp-action="SubmitArtwork" asp-controller="ArtWorks" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group">
                    <label asp-for="ArtistName" class="form-label">اسم الفنان</label>
                    <input asp-for="ArtistName" class="form-control" required>
                    <span asp-validation-for="ArtistName" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title" class="form-label">عنوان العمل</label>
                    <input asp-for="Title" class="form-control" required>
                    <span asp-validation-for="Title" class="validation-message"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">الوصف</label>
                <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                <span asp-validation-for="Description" class="validation-message"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Type" class="form-label">نوع العمل الفني</label>
                    <input asp-for="Type" class="form-control" required>
                    <span asp-validation-for="Type" class="validation-message"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">الصورة</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" required>
                </div>
            </div>

            <div class="buttons-container">
                <a href="@Url.Action("ArtWorks", "ArtWorks")" class="btn btn-back">
                    <i class="fas fa-arrow-right"></i>
                    رجوع
                </a>
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-plus-circle"></i>
                    إرسال
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        @if (TempData["Error"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: '@Html.Raw(TempData["Error"])',
                    confirmButtonText: 'حسناً',
                    confirmButtonColor: '#355E3B'
                });
            </text>
        }

        $.extend($.validator.messages, {
            required: "هذا الحقل مطلوب",
            email: "الرجاء إدخال بريد إلكتروني صحيح"
        });
    </script>
} 