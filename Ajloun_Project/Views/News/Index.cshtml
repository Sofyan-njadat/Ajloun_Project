@model List<Ajloun_Project.Models.News>

@{
	ViewData["Title"] = "الأخبار";
	Layout = "_Layout";
}
@{
	var currentCategory = Context.Request.Query["category"].ToString();
	var categoryList = ViewBag.Categories as List<string> ?? new List<string>();
}

@section Styles {
	<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@600;700;900&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
	<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
	<style>
		.modern-header {
			background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/images/library-bg.jpg);
			background-size: cover;
			background-position: center;
			height: 250px;
			display: flex;
			align-items: center;
			justify-content: center;
			text-align: center;
			margin-bottom: 30px;
			position: relative;
			border-top: 25px solid #1E2F23;
			border-bottom: 25px solid #1E2F23;
			font-family: 'Cairo', sans-serif;
		}

		.overlay {
			width: 100%;
			height: 100%;
			display: flex;
			align-items: center;
			justify-content: center;
			background: #355E3B;
		}

		.header-content {
			color: white;
			z-index: 1;
			padding: 0 20px;
		}

			.header-content h1 {
				font-size: 4rem;
				font-weight: 900;
				margin-bottom: 1rem;
				color: #ffd700;
				text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
				font-family: 'Cairo', sans-serif;
			}

			.header-content .subtitle {
				font-size: 1.5rem;
				color: white;
				margin: 0;
				text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
				font-weight: 600;
			}

		:root {
			--primary: #1a4d2e;
			--primary-dark: #0d2e1b;
			--primary-light: #4f9d69;
			--accent: #ff9f29;
			--accent-dark: #e88c17;
			--dark: #1E2F23;
			--light: #f5fef8;
			--light-2: #e8f5ee;
			--text: #2D2D2D;
			--text-light: #6B6B6B;
			--white: #FFFFFF;
			--transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
			--shadow-sm: 0 5px 20px rgba(0, 0, 0, 0.08);
			--shadow-md: 0 10px 30px rgba(0, 0, 0, 0.12);
			--shadow-lg: 0 15px 45px rgba(0, 0, 0, 0.18);
			--glass: rgba(255, 255, 255, 0.15);
		}

		body {
			font-family: 'Tajawal', sans-serif;
			background-color: var(--light);
			color: var(--text);
			overflow-x: hidden;
		}

		.news-hero {
			height: 60vh;
			min-height: 500px;
			background: linear-gradient(135deg, var(--primary-dark), var(--primary));
			position: relative;
			overflow: hidden;
			display: flex;
			align-items: center;
			justify-content: center;
			clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
			margin-bottom: -100px;
		}

		.hero-content {
			position: relative;
			z-index: 2;
			text-align: center;
			color: white;
			padding: 0 20px;
			max-width: 800px;
			margin: 0 auto;
		}

		.hero-title {
			font-size: 4.5rem;
			font-weight: 900;
			margin-bottom: 20px;
			text-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
			line-height: 1.2;
		}

		.hero-subtitle {
			font-size: 1.5rem;
			font-weight: 300;
			margin-bottom: 30px;
			opacity: 0.9;
		}

		.hero-search {
			position: relative;
			max-width: 600px;
			margin: 0 auto;
		}

		.search-input {
			width: 100%;
			padding: 18px 30px;
			border-radius: 50px;
			border: none;
			font-size: 1.1rem;
			box-shadow: var(--shadow-lg);
			transition: var(--transition);
		}

			.search-input:focus {
				outline: none;
				transform: scale(1.02);
			}

		.search-icon {
			position: absolute;
			left: 25px;
			top: 50%;
			transform: translateY(-50%);
			color: var(--text-light);
		}

		.news-section {
			padding: 0 40px 80px;
			position: relative;
			background-color: var(--light);
		}

		.section-title {
			text-align: center;
			font-size: 2.8rem;
			font-weight: 800;
			color: var(--primary-dark);
			margin-bottom: 60px;
			position: relative;
		}

			.section-title::after {
				content: "";
				width: 120px;
				height: 6px;
				background: linear-gradient(to right, var(--accent), var(--primary-light));
				display: block;
				margin: 20px auto 0;
				border-radius: 3px;
				box-shadow: var(--shadow-sm);
			}

		.news-tabs {
			display: flex;
			justify-content: center;
			gap: 10px;
			margin-top: 15px;
			flex-wrap: wrap;
		}

		span{
			direction: rtl;
			text-align: right;
		}

		.tab-btn {
			padding: 8px 20px;
			border-radius: 25px;
			background: var(--light-2);
			color: var(--text);
			border: none;
			font-weight: 600;
			font-size: 0.9rem;
			cursor: pointer;
			transition: var(--transition);
			text-decoration: none;
		}

			.tab-btn.active, .tab-btn:hover {
				background: var(--primary);
				color: white;
				transform: translateY(-2px);
			}

		.news-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
			gap: 30px;
			margin-top: 30px;
		}

		.news-card {
			background: var(--white);
			border-radius: 20px;
			overflow: hidden;
			box-shadow: var(--shadow-md);
			transition: var(--transition);
			position: relative;
			display: flex;
			flex-direction: column;
			height: 100%;
		}

			.news-card:hover {
				transform: translateY(-10px);
				box-shadow: var(--shadow-lg);
			}

		.card-image-container {
			height: 250px;
			overflow: hidden;
			position: relative;
		}

		.card-image {
			width: 100%;
			height: 100%;
			object-fit: cover;
			transition: var(--transition);
		}

		.news-card:hover .card-image {
			transform: scale(1.1);
		}

		.card-content {
			padding: 25px;
			flex: 1;
			display: flex;
			flex-direction: column;
		}

		.card-category {
			display: inline-block;
			background: var(--primary-light);
			color: white;
			padding: 5px 15px;
			border-radius: 50px;
			font-size: 0.8rem;
			font-weight: 700;
			margin-bottom: 15px;
		}

		.card-title {
			font-size: 1.5rem;
			font-weight: 800;
			margin-bottom: 15px;
			color: var(--primary-dark);
			line-height: 1.4;
		}

		.card-excerpt {
			color: var(--text-light);
			margin-bottom: 20px;
			line-height: 1.7;
			flex: 1;
			direction: rtl;
			text-align: right;
		}

		.card-meta {
			display: flex;
			align-items: center;
			justify-content: space-between;
			color: var(--text-light);
			font-size: 0.9rem;
			margin-top: auto;
		}

		.card-date {
			display: flex;
			align-items: center;
			gap: 5px;
		}

		.read-more-btn {
			display: inline-flex;
			align-items: center;
			justify-content: center;
			background: linear-gradient(to right, var(--primary), var(--primary-dark));
			color: white;
			padding: 12px 25px;
			border-radius: 50px;
			text-decoration: none;
			font-weight: 700;
			transition: var(--transition);
			box-shadow: 0 5px 15px rgba(26, 77, 46, 0.3);
			margin-top: 15px;
			width: fit-content;
		}

			.read-more-btn:hover {
				transform: translateY(-3px);
				box-shadow: 0 8px 25px rgba(26, 77, 46, 0.4);
				background: linear-gradient(to right, var(--primary-dark), var(--primary));
			}

		.newsletter-section {
			background: linear-gradient(135deg, var(--primary), var(--primary-dark));
			padding: 80px 40px;
			margin-top: 100px;
			color: white;
			text-align: center;
			clip-path: polygon(0 10%, 100% 0, 100% 100%, 0 100%);
		}

		.newsletter-title {
			font-size: 2.5rem;
			font-weight: 800;
			margin-bottom: 20px;
		}

		.newsletter-desc {
			font-size: 1.2rem;
			max-width: 700px;
			margin: 0 auto 40px;
			opacity: 0.9;
		}

		.newsletter-form {
			display: flex;
			max-width: 600px;
			margin: 0 auto;
			box-shadow: var(--shadow-lg);
			border-radius: 50px;
			overflow: hidden;
		}

		.newsletter-input {
			flex: 1;
			padding: 18px 25px;
			border: none;
			font-size: 1.1rem;
		}

			.newsletter-input:focus {
				outline: none;
			}

		.newsletter-btn {
			background: var(--accent);
			color: var(--primary-dark);
			border: none;
			padding: 0 35px;
			font-weight: 700;
			font-size: 1.1rem;
			cursor: pointer;
			transition: var(--transition);
		}

			.newsletter-btn:hover {
				background: var(--accent-dark);
			}

		/* Animation Classes */
		.animate-delay-1 {
			animation-delay: 0.1s;
		}

		.animate-delay-2 {
			animation-delay: 0.2s;
		}

		.animate-delay-3 {
			animation-delay: 0.3s;
		}

		/* Floating elements */
		.floating-element {
			position: absolute;
			border-radius: 50%;
			background: rgba(255, 255, 255, 0.1);
			backdrop-filter: blur(5px);
			animation: float 15s infinite ease-in-out;
		}

		@@keyframes float {
			0%, 100% {
				transform: translateY(0) rotate(0deg);
			}

			50% {
				transform: translateY(-20px) rotate(5deg);
			}
		}

		/* Responsive Design */
		@@media (max-width: 1200px) {
			.news-grid {
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 30px;
			}
		}

		@@media (max-width: 992px) {
			.hero-title {
				font-size: 3.5rem;
			}
		}

		@@media (max-width: 768px) {
			.modern-header {
				height: 200px;
				margin-bottom: 20px;
			}

			.filter-section {
				padding: 15px;
				margin-bottom: 20px;
			}

			.filter-container {
				flex-direction: column;
				gap: 10px;
			}

			.search-form {
				width: 100%;
			}

			.news-tabs {
				justify-content: flex-start;
				overflow-x: auto;
				padding-bottom: 5px;
				-webkit-overflow-scrolling: touch;
				margin-top: 10px;
			}

			.tab-btn {
				flex-shrink: 0;
				font-size: 0.85rem;
				padding: 6px 15px;
			}

			.news-section {
				padding: 0 20px 60px;
			}

			.news-grid {
				gap: 20px;
				margin-top: 20px;
			}
		}

		@@media (max-width: 576px) {
			.hero-title {
				font-size: 2rem;
			}

			.section-title {
				font-size: 1.8rem;
			}

			.news-tabs {
				justify-content: flex-start;
				overflow-x: auto;
				padding-bottom: 10px;
				-webkit-overflow-scrolling: touch;
			}

			.tab-btn {
				flex-shrink: 0;
			}

			.newsletter-title {
				font-size: 1.8rem;
			}

			.newsletter-desc {
				font-size: 1rem;
			}
		}

		.tab-btn {
			text-decoration: none !important;
		}

		a.tab-btn {
			text-decoration: none !important;
		}

		.filter-section {
			background: var(--white);
			padding: 20px;
			border-radius: 12px;
			box-shadow: var(--shadow-md);
			margin-bottom: 30px;
			max-width: 900px;
			margin-left: auto;
			margin-right: auto;
		}

		.filter-container {
