@model List<Ajloun_Project.Models.News>

@{
    ViewData["Title"] = "الأخبار";
    Layout = "_Layout";
}
@{
    var currentCategory = Context.Request.Query["category"].ToString();
    var categoryList = ViewBag.Categories as List<string> ?? new List<string>();
}

<link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;900&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />

<style>
    :root {
        --primary: #1a4d2e;
        --primary-dark: #0d2e1b;
        --primary-light: #4f9d69;
        --accent: #ff9f29;
        --accent-dark: #e88c17;
        --dark: #1E2F23;
        --light: #f5fef8;
        --light-2: #e8f5ee;
        --text: #2D2D2D;
        --text-light: #6B6B6B;
        --white: #FFFFFF;
        --transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        --shadow-sm: 0 5px 20px rgba(0, 0, 0, 0.08);
        --shadow-md: 0 10px 30px rgba(0, 0, 0, 0.12);
        --shadow-lg: 0 15px 45px rgba(0, 0, 0, 0.18);
        --glass: rgba(255, 255, 255, 0.15);
    }

    body {
        font-family: 'Tajawal', sans-serif;
        background-color: var(--light);
        color: var(--text);
        overflow-x: hidden;
    }

    .news-hero {
        height: 60vh;
        min-height: 500px;
        background: linear-gradient(135deg, var(--primary-dark), var(--primary));
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
        margin-bottom: -100px;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        color: white;
        padding: 0 20px;
        max-width: 800px;
        margin: 0 auto;
    }

    .hero-title {
        font-size: 4.5rem;
        font-weight: 900;
        margin-bottom: 20px;
        text-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        line-height: 1.2;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 30px;
        opacity: 0.9;
    }

    .hero-search {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
    }

    .search-input {
        width: 100%;
        padding: 18px 30px;
        border-radius: 50px;
        border: none;
        font-size: 1.1rem;
        box-shadow: var(--shadow-lg);
        transition: var(--transition);
    }

        .search-input:focus {
            outline: none;
            transform: scale(1.02);
        }

    .search-icon {
        position: absolute;
        left: 25px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-light);
    }

    .news-section {
        padding: 150px 40px 80px;
        position: relative;
        background-color: var(--light);
    }

    .section-title {
        text-align: center;
        font-size: 2.8rem;
        font-weight: 800;
        color: var(--primary-dark);
        margin-bottom: 60px;
        position: relative;
    }

        .section-title::after {
            content: "";
            width: 120px;
            height: 6px;
            background: linear-gradient(to right, var(--accent), var(--primary-light));
            display: block;
            margin: 20px auto 0;
            border-radius: 3px;
            box-shadow: var(--shadow-sm);
        }

    .news-tabs {
        display: flex;
        justify-content: center;
        margin-bottom: 50px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .tab-btn {
        padding: 12px 25px;
        border-radius: 50px;
        background: var(--light-2);
        color: var(--text);
        border: none;
        font-weight: 700;
        cursor: pointer;
        transition: var(--transition);
        box-shadow: var(--shadow-sm);
    }

        .tab-btn.active, .tab-btn:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-3px);
        }

    .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 40px;
    }

    .news-card {
        background: var(--white);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .news-card:hover {
            transform: translateY(-10px);
            box-shadow: var(--shadow-lg);
        }

    .card-image-container {
        height: 250px;
        overflow: hidden;
        position: relative;
    }

    .card-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .news-card:hover .card-image {
        transform: scale(1.1);
    }

    .card-content {
        padding: 25px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .card-category {
        display: inline-block;
        background: var(--primary-light);
        color: white;
        padding: 5px 15px;
        border-radius: 50px;
        font-size: 0.8rem;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 15px;
        color: var(--primary-dark);
        line-height: 1.4;
    }

    .card-excerpt {
        color: var(--text-light);
        margin-bottom: 20px;
        line-height: 1.7;
        flex: 1;
    }

    .card-meta {
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: var(--text-light);
        font-size: 0.9rem;
        margin-top: auto;
    }

    .card-date {
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .read-more-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(to right, var(--primary), var(--primary-dark));
        color: white;
        padding: 12px 25px;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 700;
        transition: var(--transition);
        box-shadow: 0 5px 15px rgba(26, 77, 46, 0.3);
        margin-top: 15px;
        width: fit-content;
    }

        .read-more-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(26, 77, 46, 0.4);
            background: linear-gradient(to right, var(--primary-dark), var(--primary));
        }

    .newsletter-section {
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        padding: 80px 40px;
        margin-top: 100px;
        color: white;
        text-align: center;
        clip-path: polygon(0 10%, 100% 0, 100% 100%, 0 100%);
    }

    .newsletter-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 20px;
    }

    .newsletter-desc {
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto 40px;
        opacity: 0.9;
    }

    .newsletter-form {
        display: flex;
        max-width: 600px;
        margin: 0 auto;
        box-shadow: var(--shadow-lg);
        border-radius: 50px;
        overflow: hidden;
    }

    .newsletter-input {
        flex: 1;
        padding: 18px 25px;
        border: none;
        font-size: 1.1rem;
    }

        .newsletter-input:focus {
            outline: none;
        }

    .newsletter-btn {
        background: var(--accent);
        color: var(--primary-dark);
        border: none;
        padding: 0 35px;
        font-weight: 700;
        font-size: 1.1rem;
        cursor: pointer;
        transition: var(--transition);
    }

        .newsletter-btn:hover {
            background: var(--accent-dark);
        }

    /* Animation Classes */
    .animate-delay-1 {
        animation-delay: 0.1s;
    }

    .animate-delay-2 {
        animation-delay: 0.2s;
    }

    .animate-delay-3 {
        animation-delay: 0.3s;
    }

    /* Floating elements */
    .floating-element {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
        animation: float 15s infinite ease-in-out;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    /* Responsive Design */
    @@media (max-width: 1200px) {
        .news-grid {
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
        }
    }

    @@media (max-width: 992px) {
        .hero-title {
            font-size: 3.5rem;
        }
    }

    @@media (max-width: 768px) {
        .news-hero {
            height: 50vh;
            min-height: 400px;
            clip-path: polygon(0 0, 100% 0, 100% 95%, 0 100%);
            margin-bottom: -80px;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .news-section {
            padding: 100px 20px 60px;
        }

        .section-title {
            font-size: 2.2rem;
        }

        .newsletter-form {
            flex-direction: column;
            border-radius: 20px;
        }

        .newsletter-btn {
            padding: 15px;
        }
    }

    @@media (max-width: 576px) {
        .hero-title {
            font-size: 2rem;
        }

        .section-title {
            font-size: 1.8rem;
        }

        .news-tabs {
            justify-content: flex-start;
            overflow-x: auto;
            padding-bottom: 10px;
            -webkit-overflow-scrolling: touch;
        }

        .tab-btn {
            flex-shrink: 0;
        }

        .newsletter-title {
            font-size: 1.8rem;
        }

        .newsletter-desc {
            font-size: 1rem;
        }
    }

    .tab-btn {
        text-decoration: none !important;
    }

    a.tab-btn {
        text-decoration: none !important;
    }
</style>

<!-- Hero Section -->
<section class="news-hero">
    <!-- Floating elements -->
    <div class="floating-element" style="width: 150px; height: 150px; top: 10%; left: 5%; animation-delay: 0s;"></div>
    <div class="floating-element" style="width: 200px; height: 200px; bottom: 15%; right: 10%; animation-delay: 2s;"></div>
    <div class="floating-element" style="width: 100px; height: 100px; top: 30%; right: 20%; animation-delay: 4s;"></div>

    <div class="hero-content animate__animated animate__fadeIn">
        <h1 class="hero-title animate__animated animate__fadeInDown">آخر الأخبار والتحديثات</h1>
        <p class="hero-subtitle animate__animated animate__fadeIn animate__delay-1s">ابقَ على اطلاع دائم بكل ما هو جديد في عالمنا</p>
        <div class="hero-search animate__animated animate__fadeIn animate__delay-2s">
            <form method="get" asp-action="Index" class="search-form" style="position: relative; max-width: 600px; margin: 0 auto;">
                <input type="hidden" name="category" value="@Context.Request.Query["category"]" />
                <input type="text" name="search" value="@Context.Request.Query["search"]" class="search-input" placeholder="ابحث عن الأخبار..." />
                <button type="submit" class="search-icon" style="position: absolute; left: 25px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer;">
                    <i class="fas fa-search" style="color: var(--text-light); font-size: 1.2rem;">بحث</i>
                </button>
            </form>
        </div>
    </div>
</section>

<!-- News Section -->
<section class="news-section">
    <h2 class="section-title animate__animated animate__fadeIn">📰 آخر الأخبار</h2>

    <!-- News Tabs -->
    <div class="news-tabs animate__animated animate__fadeIn animate__delay-1s">
        <a href="@Url.Action("Index")" class="tab-btn @(string.IsNullOrEmpty(currentCategory) ? "active" : "")">الكل</a>
        <a href="@Url.Action("Index", new { category = "latest" })" class="tab-btn @(currentCategory == "latest" ? "active" : "")">الأحدث</a>
        @foreach (var cat in categoryList)
        {
            <a href="@Url.Action("Index", new { category = cat })" class="tab-btn @(currentCategory == cat ? "active" : "")">@cat</a>
        }
    </div>

    <!-- News Grid -->
    <div class="news-grid">
        @foreach (var item in Model)
        {
            <div class="news-card animate__animated animate__fadeInUp">
                <div class="card-image-container">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-image" alt="News Image" />
                    }
                    else
                    {
                        <div style="background: linear-gradient(135deg, var(--primary-light), var(--primary-dark)); height: 100%; display: flex; align-items: center; justify-content: center;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" fill="white" viewBox="0 0 16 16">
                                <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12z" />
                            </svg>
                        </div>
                    }
                </div>
                <div class="card-content">
                    <span class="card-category">@item.Category</span>
                    <h3 class="card-title">@item.Title</h3>
                    <p class="card-excerpt">@((item.Content?.Length ?? 0) > 150 ? item.Content.Substring(0, 150) + "..." : item.Content)</p>
                    <div class="card-meta">
                        <span class="card-date">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                            </svg>
                            @item.PublishDate?.ToString("yyyy-MM-dd")
                        </span>
                    </div>
                    <a class="read-more-btn" asp-action="Details" asp-route-id="@item.NewsId">
                        اقرأ المزيد
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 5px;">
                            <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
                        </svg>
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Font Awesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<script>
    // Add scroll animation
    document.addEventListener('DOMContentLoaded', function () {
        const elements = document.querySelectorAll('.news-card, .section-title, .news-tabs');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate__fadeInUp');
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });

        elements.forEach(element => {
            observer.observe(element);
        });

        // Tab functionality
        const tabs = document.querySelectorAll('.tab-btn');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
            });
        });
    });
</script>